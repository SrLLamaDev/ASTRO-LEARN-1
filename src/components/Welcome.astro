---
export interface Props {
  label: string;
}

const { label = "Presiona Aquí" } = Astro.props;
---

<style>
  .neon-button {
    font-family: 'Arial', sans-serif;
    font-size: 1.2rem;
    color: #fff;
    background: transparent;
    border: 2px solid #0ff; /* Cian neón */
    padding: 12px 24px;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 2px;
    position: relative;
    overflow: hidden;
    transition: 0.2s;
  }

  .neon-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: rgba(0, 255, 255, 0.2);
    transition: 0.4s;
  }

  .neon-button:hover::before {
    left: 0;
  }

  .neon-button:hover {
    box-shadow: 0 0 8px #0ff, 0 0 20px #0ff, 0 0 40px #0ff;
    border-color: #0ff;
  }

  .neon-button:active {
    transform: scale(0.96);
  }
</style>

<button class="neon-button">{label}</button>
